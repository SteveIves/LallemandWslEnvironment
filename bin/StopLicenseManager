#!/bin/bash

RESULT=`ps -ef | grep " synd" | grep -v grep`

if [[ -n "$RESULT" ]]
then
  if [[ "$1" != "quiet" ]]
  then
    echo "Stopping Synergy License Manager"
    synd -q
  else
    synd -q > /dev/null
  fi
else
  if [[ "$1" != "quiet" ]]; then echo "Synergy License Manager is not running!"; fi
fi
